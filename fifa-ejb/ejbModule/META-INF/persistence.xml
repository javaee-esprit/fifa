<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="fifaPU1">
		<jta-data-source>java:/fifaDS</jta-data-source>
		<class>com.fifa.persistence.Player</class>
		<class>com.fifa.persistence.Team</class>
		<class>com.fifa.persistence.User</class>
		<class>com.fifa.persistence.Employee</class>
		<class>com.fifa.persistence.Admin</class>
		<class>com.fifa.persistence.Skill</class>
		<class>com.fifa.persistence.Address</class>
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
